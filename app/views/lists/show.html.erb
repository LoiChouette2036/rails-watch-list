<div class="banner">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container my-lists">
  <!-- Create bookmark button -->
  <div class="d-flex justify-content-start mb-3">
    <%= link_to "create bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  </div>

  <!-- Movie cards -->
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-md-6">
        <div class="card">
          <!-- Movie poster -->
          <div class="card-image" style="background-image: url('<%= bookmark.movie.poster_url %>');"></div>
          <div class="card-product-infos">
            <!-- Movie title -->
            <h2><%= bookmark.movie.title %></h2>
            <!-- Movie overview -->
            <p><%= bookmark.movie.overview %></p>
            <!-- Comment -->
            <p class="list-group-item"><%= bookmark.comment %></p>
            <!-- Delete button -->
            <div class="actions d-flex justify-content-between">
              <%= link_to "Delete",
                bookmark_path(bookmark),
                class: "btn btn-danger",
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }
              %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Return to lists button -->
  <div class="mt-4">
    <%= link_to "return to Lists", lists_path, class: "btn btn-secondary" %>
  </div>
</div>
