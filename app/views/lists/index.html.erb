<div class="banner" style="background: linear-gradient(to right, rgb(173, 83, 137), rgb(60, 16, 83));">
  <div class="container">
    <h1>Save any kind of movies</h1>
    <p>Classic</p>
  </div>
</div>

<div class="container my-lists">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>My Lists</h2>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-success" %>
  </div>
  <div class="row">
    <% @lists.each do |list| %> <!-- Begin loop -->
      <% if list.photo.attached? %> <!-- Begin conditional -->
        <div class="col-md-4">
          <div class="card">
            <%= link_to list_path(list), class: "card-link" do %> <!-- Begin link block -->
              <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fill %>');">
                <div class="card-title">
                  <h3><%= list.name %></h3>
                </div>
              </div>
            <% end %> <!-- End link block -->
          </div>
        </div>
      <% else %> <!-- Else condition -->
        <div class="col-md-4">
          <div class="card">
            <%= link_to list_path(list), class: "card-link" do %> <!-- Begin fallback link block -->
              <div class="card-image" style="background-color: blue;">
                <div class="card-title">
                  <h3><%= list.name %></h3>
                </div>
              </div>
            <% end %> <!-- End fallback link block -->
          </div>
        </div>
      <% end %> <!-- End conditional -->
    <% end %> <!-- End loop -->
  </div>
</div>
